<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.distrapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/SecondaryTheme">
        <activity android:name=".view.TopicsListActivity"
            android:label ="@string/avail_topics"
            android:exported="true">

        </activity>
        <activity android:name=".view.VideoInfoActivity"
            android:label ="@string/publish_vid"/>
        <activity
            android:name=".view.MetaDataInfoActivity"
            android:label="@string/vid_info" />
        <activity android:name=".view.PlayVideoActivity"
            android:label="@string/play"/>
        <activity
            android:name=".view.Published_SavedVidsActivity"
            android:label="@string/published_vids" />
        <activity
            android:name=".view.MenuActivity"
            android:label="@string/menu_screen"
            android:requestLegacyExternalStorage="true" />
        <activity
            android:name=".view.LogInActivity"
            android:label="@string/log_in"
            android:requestLegacyExternalStorage="true" />
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>